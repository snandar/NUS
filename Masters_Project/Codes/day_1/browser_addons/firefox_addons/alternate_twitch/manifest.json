{
	"manifest_version": 2,
	"applications":
	{
		"gecko":
		{
			"id": "twitch5@coolcmd",
			"strict_min_version": "52.0"
		}
	},
	"name": "Alternate Player for Twitch.tv",
	"short_name": "Alternate Player",
	"version": "2018.12.10",
	"description": "__MSG_M0001__",
	"developer":
	{
		"name": "Alexander Choporov (CoolCmd)"
	},
	"icons":
	{
		"128": "manifest.svg"
	},
	"default_locale": "en",
	"permissions":
	[
		"storage",
		"cookies",
		"webRequest",
		"webRequestBlocking",
		"clipboardWrite",
		"http://*/*",
		"https://*/*"
	],
	"web_accessible_resources":
	[
		"content.css"
	],
	"background":
	{
		"scripts":
		[
			"background.js"
		]
	},
	"content_scripts":
	[{
		"matches":
		[
			"https://www.twitch.tv/*",
			"https://m.twitch.tv/*"
		],
		"js":
		[
			"common.js",
			"content.js"
		],
		"all_frames": true,
		"run_at": "document_start"
	}]
}
